<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>NotasOnline</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/login.html</form-login-page>
      <form-error-page>/error.html</form-error-page>
    </form-login-config>
  </login-config>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Protegido</web-resource-name>
      <url-pattern>/api/*</url-pattern>
      <url-pattern>/alumno/*</url-pattern>
      <url-pattern>/profesor/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>alumno</role-name>
      <role-name>profesor</role-name>
    </auth-constraint>
  </security-constraint>
  <security-role>
    <role-name>alumno</role-name>
  </security-role>
  <security-role>
    <role-name>profesor</role-name>
  </security-role>
  <servlet>
    <description></description>
    <display-name>AuthTest</display-name>
    <servlet-name>AuthTest</servlet-name>
    <servlet-class>AuthTest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthTest</servlet-name>
    <url-pattern>/authtest</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>Logout</display-name>
    <servlet-name>Logout</servlet-name>
    <servlet-class>Logout</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>AlumnService</display-name>
    <servlet-name>AlumnService</servlet-name>
    <servlet-class>AlumnService</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AlumnService</servlet-name>
    <url-pattern>/AlumnService</url-pattern>
  </servlet-mapping>
</web-app>